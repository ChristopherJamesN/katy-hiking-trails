<p id="notice"><%= notice %></p>

<h1>Trails</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name </th>
      <th>Reservoir </th>
      <th>Maplink </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= link_to trail.name, trail %></td>
        <td><%= trail.reservoir.capitalize %></td>
        <% if trail.maplink != nil %>
          <td><%= link_to "Link to Map", "#{trail.maplink}", :target => "_blank" %></td>
        <% else %>
          <td><%= link_to "Link to Map", "https://www.google.com/maps/place/#{trail.name},+Katy,+TX,+77450/", :target => "_blank" %></td>
        <% end %>
        <td><%= link_to 'Trail Detail', trail %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
